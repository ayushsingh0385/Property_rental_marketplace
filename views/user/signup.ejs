<% layout('/layouts/boilerplate') %>
<body>
    <form action="/signup" method="post" novalidate class="needs-validation">
        <div class="mt-3 col-8 offset-2">
            <!-- 2col 8col 2col so total 12col 12*12 grid -->
        <h1>Sign Up Page</h1>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" required placeholder="Enter unique username" id="usesrname" class="form-control">
            <div class="invalid-feedback">username required</div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email"  name="email" required placeholder="Enter your email" id="email" class="form-control">
            <div class="invalid-feedback">email required</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password"  name="password" required placeholder="Enter strong Password" id="password" class="form-control">
            <div class="invalid-feedback">password required</div>
        </div>
        <br>
        <button class="btn btn-primary addbtn">Sign Up</button>
    </form>
    <div class="mt-3">Existing User ? <a href="/login">Log In</a></div>
        <br><br>
        </div>

</body>