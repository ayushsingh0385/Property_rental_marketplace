<% layout('/layouts/boilerplate') %>
<body>
    <form action="/login" method="post" novalidate class="needs-validation">
        <div class="mt-3 col-8 offset-2">
            <!-- 2col 8col 2col so total 12col 12*12 grid -->
        <h1>Log In Page</h1>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" required placeholder="Enter username" id="usesrname" class="form-control">
            <div class="invalid-feedback">username required</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password"  name="password" required placeholder="Enter password" id="password" class="form-control">
            <div class="invalid-feedback">password required</div>
        </div>
        <br>
        <button class="btn btn-primary addbtn">Log In</button>
    </form>
    <div class="mt-3">New User ? <a href="/signup">Sign Up</a></div>
        <br><br>
        </div>

</body>