<% layout('/layouts/boilerplate') %>
<body>
    <h1>All listings</h1>
    <!-- <a href="http://localhost:8080/listings/new">Create a new Listing</a> -->
    <br><br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1">
      <% for( let i = 0; i < listings.length; i++ ) { %>
        <a href="/listings/<%= listings[i].id %>" class="listing-link card col" style="width: 18rem;" style="width: 20rem;">
          <div >
            <img src=<%= listings[i].image.url %> class="card-img-top" style=" height:15rem" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listings[i].title %></b> <br>
                &#x20b9; <%= listings[i].price.toLocaleString("en-IN") %> / night
              </p>
            </div>
          </div>
        </a>
    <% } %>
    </div>
</body>