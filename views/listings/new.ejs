<% layout('/layouts/boilerplate') %>
<body>
    <form action="/listings/new" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mt-3 col-8 offset-2">
            <!-- 2col 8col 2col so total 12col 12*12 grid -->
        <h1>New listing</h1>
        <div class="mb-3">
            <label for="text" class="form-label">Title</label>
            <input type="text" name="text" required placeholder="enter title" id="text" class="form-control">
            <div class="invalid-feedback">Title required</div>
        </div>
        <div class="mb-3">
            <label for="des" class="form-label">Description</label>
            <textarea name="des" id="des" required class="form-control"></textarea>
            <div class="invalid-feedback">Enter a description</div>
        </div>
        <!-- <div class="mb-3">
            <label for="imageUpload" class="form-label">Image Link</label>
            <input type="text"  name="imageUpload" placeholder="enter image URL/link" id="imageUpload" class="form-control">
        </div> -->
        <div class="mb-3">
            <label for="imageUploadFile" class="form-label">Upload a Image</label>
            <input type="file" required name="imageUploadFile" placeholder="enter image URL/link" id="imageUploadFile" class="form-control">
            <div class="invalid-feedback">Image required</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="price" required placeholder="enter price" min="1"  id="price" class="form-control">
            <div class="invalid-feedback">Enter price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country :</label>
            <input type="text" name="country" required placeholder="enter country" id="Country" class="form-control">
            <div class="invalid-feedback">Country required</div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" required placeholder="enter location" id="location" class="form-control">
            <div class="invalid-feedback">Location required</div>
        </div>
        <br>
        <button class="btn btn-primary addbtn">Create Listing</button>
        <br><br>
        </div>

    </form>
</body>